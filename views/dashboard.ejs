<%- include('partials/Navbar.ejs',{authenticated:authenticated}) %>
    <style>
        .profile {
            max-width: 98vw;
            min-height: 100vh;
            display: flex;
            justify-content: center;
        }

        .profile .wrapper {
            margin: 100px 0;
            width: 900px;
            max-width: 98vw;
            background-color: #f3f4f6;
            border-radius: 10px;
            min-height: 700px;
            border: 1px solid #dee2e6;
        }

        .profile .banner {
            width: 100%;
            height: 150px;
            background-color: #6f6f93;
            border-radius: 10px 10px 0 0;

        }

        .profile .pprofileContainer {
            display: flex;
            position: relative;
            top: -40px;
            flex-wrap: wrap;

        }

        .profile .img {
            width: 150px;
            height: 150px;
            overflow: hidden;
            border-radius: 50%;
            box-shadow: 0 0 0 5px white;
        }

        .profile .img img {
            width: 150px;
            height: 150px;
            object-fit: cover;
        }

        .profile .content {
            display: flex;
            justify-content: end;
            flex-direction: column;
            padding-bottom: 20px;
        }

        .profile .light {
            padding: 0 !important;
            margin: 0 !important;
            color: rgb(117, 115, 115);
        }
        .profile .logoutBtn {
            position: absolute;
            top: 40px;
            right: 0;

        }
        .mainProfileImg {
            min-width: 150px;
        }
        @media screen and (max-width: 550px) {
            .profile .mainProfileImg {
                margin: 0 auto;
            }
            .profile .logoutBtn {
                position: static;

            }
        }
    </style>


    <div class="profile">
        <div class="wrapper mx-3">
            <div class="banner">

            </div>
            <div class="pprofileContainer mx-5">
                <div class="img mainProfileImg">
                    <img src="<%= user.image %>" alt="<%= user.name %>" referrerpolicy="no-referrer">
                </div>
                <div class="content mx-3">
                    <h5 class="heading ">
                        <%= user.name %>
                    </h5>
                    <a href="auth/logout">
                        <button class="px-3 py-2 main-Btn logoutBtn">Logout</button>
                    </a>
                </div>
            </div>
        </div>
    </div>